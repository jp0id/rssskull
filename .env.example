# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# Server Configuration
PORT=8916
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=file:/app/data/production.db

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info

# Optional: Advanced Settings
MAX_FEEDS_PER_CHAT=50
RSS_CHECK_INTERVAL=300

# RSS-Bridge Configuration (currently disabled - requires cookies/session management)
# RSS_BRIDGE_HOST=http://rss-bridge:80

# Instagram Bridge Credentials (DISABLED for now - requires cookies/session management)
# INSTAGRAM_SESSION_ID=your_session_id_here
# INSTAGRAM_DS_USER_ID=your_ds_user_id_here

# Reddit API OAuth (Script App) - Configure when ready to use OAuth
# REDDIT_CLIENT_ID=your_client_id_here
# REDDIT_CLIENT_SECRET=your_client_secret_here
# REDDIT_USERNAME=your_reddit_username
# REDDIT_PASSWORD=your_reddit_password

# Feature Flags
USE_REDDIT_API=false              # Start with false, enable when OAuth works
USE_REDDIT_JSON_FALLBACK=true    # Fallback to public JSON API
FEATURE_INSTAGRAM=false