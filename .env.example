# Bot Configuration
BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz-123456789

# Server Configuration
PORT=8916
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=file:/app/data/production.db

# Redis Configuration (optional - set DISABLE_REDIS=true to disable)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
DISABLE_REDIS=false

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info

# Optional: Advanced Settings
MAX_FEEDS_PER_CHAT=50
RSS_CHECK_INTERVAL=300

# Reddit API OAuth (Script App) - Configure when ready to use OAuth
# Get these from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USERNAME=
REDDIT_PASSWORD=

# Feature Flags
USE_REDDIT_API=false              # Start with false, enable when OAuth works
USE_REDDIT_JSON_FALLBACK=true    # Fallback to public JSON API (recommended)
FEATURE_INSTAGRAM=false           # Instagram support (requires cookies/session)