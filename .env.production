# RSS Skull Bot v0.5.0 - Environment Variables
# Configure estas variáveis no servidor de produção

# Bot Configuration (OBRIGATÓRIO)
BOT_TOKEN=seu_token_do_telegram_bot_aqui

# Server Configuration
NODE_ENV=production
PORT=8916
HOST=0.0.0.0
LOG_LEVEL=info

# Application Settings
MAX_FEEDS_PER_CHAT=50
RSS_CHECK_INTERVAL=300

# Reddit OAuth API (opcional - para melhor performance)
REDDIT_CLIENT_ID=seu_reddit_client_id
REDDIT_CLIENT_SECRET=seu_reddit_client_secret
REDDIT_USERNAME=seu_reddit_username
REDDIT_PASSWORD=seu_reddit_password

# Cache Settings
USE_REDDIT_JSON_FALLBACK=true
CACHE_TTL_DEFAULT=600
CACHE_TTL_REDDIT=1200

# Security Settings
DISABLE_REDIS=false
ENABLE_CIRCUIT_BREAKER=true
ENABLE_RATE_LIMITING=true

# Optional: External Services
# SLACK_WEBHOOK_URL=sua_url_do_slack
# DISCORD_WEBHOOK_URL=sua_url_do_discord